<Window x:Class="Quiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz" xmlns:views="clr-namespace:QuizServer.Views" xmlns:viewmodels="clr-namespace:QuizServer.Models.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Window.DataContext>
        <viewmodels:QuizServerViewModel></viewmodels:QuizServerViewModel>
    </Window.DataContext>
    <Grid>
        <views:ServerView></views:ServerView>

        <views:QuizView>
            <views:QuizView.Style>
                <Style TargetType="UserControl">
                    <Setter Property="Visibility" Value="Collapsed"></Setter>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Vista}"
                               Value="{x:Static viewmodels:Vistas.Quiz}">
                            <Setter Property="Visibility" Value="Visible"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </views:QuizView.Style>
        </views:QuizView>

    </Grid>
</Window>
